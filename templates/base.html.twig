<script>
    // Fonction de tri automatique avancée
    function trierAvancee() {
        var selectTri = document.getElementById('selectTri').value;
        var table = document.querySelector('.table');
        var tbody = table.querySelector('tbody');
        var rows = tbody.querySelectorAll('tr');

        var rowsArray = Array.from(rows);

        var sortedRows = rowsArray.sort((rowA, rowB) => {
            var valueA = rowA.querySelector('td:nth-child(' + selectTri + ')').textContent.trim().toLowerCase();
            var valueB = rowB.querySelector('td:nth-child(' + selectTri + ')').textContent.trim().toLowerCase();
            if (valueA < valueB) {
                return -1;
            }
            if (valueA > valueB) {
                return 1;
            }
            return 0;
        });

        tbody.innerHTML = '';
        sortedRows.forEach(row => {
            tbody.appendChild(row);
        });
    }
</script>
<script>
    // Fonction de recherche automatique avancée
    function rechercherAvancee() {
        var inputSearch = document.getElementById('inputSearch').value.trim().toLowerCase();
        var table = document.querySelector('.table');
        var tbody = table.querySelector('tbody');
        var rows = tbody.querySelectorAll('tr');

        rows.forEach(row => {
            var found = false;
            row.querySelectorAll('td').forEach(cell => {
                var text = cell.textContent.trim().toLowerCase();
                if (text.includes(inputSearch)) {
                    found = true;
                }
            });
            if (found) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    }

    // Écoute de l'événement d'entrée dans le champ de recherche
    document.getElementById('inputSearch').addEventListener('input', rechercherAvancee);
</script>


