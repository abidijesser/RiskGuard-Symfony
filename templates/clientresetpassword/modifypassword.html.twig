    <form class="form" id="myform">
        <div class="form-group position-relative">
            <label for="password">Mot de passe</label>

            <div class="input-group">
                <input style="width: 100%" class="form-control" type="password" id="password" name="password" placeholder="Votre nouveau mot de passe">
                <div class="input-group-append">
                    <span class="input-group-text password-toggle-icon" onclick="togglePasswordVisibility()">
                        <i class="fas fa-eye-slash" ></i>
                    </span>
                </div>
            </div>


            <div id="passwordError" style="border: 1px solid red; border-radius: 3px; margin-top: 10px; padding-left: 4px; padding: 3px; display: none;">
