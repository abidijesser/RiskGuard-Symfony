<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Cards</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Add custom styles here if needed */
        section {
            margin-top: 150px; /* Add margin-top to create space between header and section */
        }
    </style>
</head>
<body>

{% include 'marketing/header.html.twig' %}

<section>
    <div class="container">
        <div class="row">
        {% for m in marketings %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <td><img src="{{ m.image }}" alt="Marketing Image" style="max-width: 100px;"></td>
                        <h5 class="card-title">{{m.titre}}</h5>
                        <p class="card-text">{{m.objectif}}</p>
                        <a href="{{ path('app_front_marketing_show', {'id': m.id}) }}" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        {% endfor %}
            
            <!-- Add more card elements as needed -->
        </div>
    </div>
</section>

{% include 'marketing/footer.html.twig' %}

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
