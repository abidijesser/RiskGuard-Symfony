{% extends 'base.html.twig' %}

{% block title %}Assurancevie index{% endblock %}

{% block body %}
    <h1 class="text-center" style="color: white;">Assurancevie index</h1>

    <div class="my-4" style="margin-top: 50px;"> <!-- Adjusted margin-top value -->
        <div class="container-fluid d-flex justify-content-center align-items-center">
            <div style="margin-bottom: 20px;"> <!-- Added margin-bottom -->
                <table class="table table-striped">
                    <thead class="table-dark">
                    <tr>
                        <th>Id</th>
                        <th>Datedebut</th>
                        <th>Periodevalidation</th>
                        <th>Salaireclient</th>
                        <th>Fichedepaie</th>
                        <th>commentaire</th>
                        <th>Actions</th> <!-- Changed from 'actions' to 'Actions' -->
                    </tr>
                    </thead>
                    <tbody>
                    {% for assurancevie in assurancevies %}
                        <tr>
                            <td>{{ assurancevie.id }}</td>
                            <td>{{ assurancevie.datedebut ? assurancevie.datedebut|date('Y-m-d') : '' }}</td>
                            <td>{{ assurancevie.periodevalidation }}</td>
                            <td>{{ assurancevie.salaireclient }}</td>
                            <td>{{ assurancevie.fichedepaie }}</td>
                            <td>{{ assurancevie.reponse }}</td>
                            <td>
                                <a href="{{ path('app_assurancevie_showfront', {'id': assurancevie.id}) }}" class="btn btn-primary">Show</a>
                                <a href="{{ path('app_assurancevie_editfront', {'id': assurancevie.id}) }}" class="btn btn-success">Edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">No records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <div class="text-center mt-3">
                    <a href="{{ path('app_assurancevie_newfront') }}" class="btn btn-primary">Create new</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
