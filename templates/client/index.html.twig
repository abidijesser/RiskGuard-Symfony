{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
    <h1>Client index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Mot_de_passe</th>
                <th>Telephone</th>
                <th>Date_de_naissance</th>
                <th>Cin</th>
                <th>Adresse_domicile</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.nom }}</td>
                <td>{{ client.prenom }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.motDePasse }}</td>
                <td>{{ client.telephone }}</td>
                <td>{{ client.dateDeNaissance ? client.dateDeNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ client.cin }}</td>
                <td>{{ client.adresseDomicile }}</td>
                <td>
{#                    <a href="{{ path('app_client_show', {'id': client.id}) }}">show</a>#}
{#                    <a href="{{ path('app_client_edit', {'id': client.id}) }}">edit</a>#}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_client_new') }}">Create new</a>
{% endblock %}
