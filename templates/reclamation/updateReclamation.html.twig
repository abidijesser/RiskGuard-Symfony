{% endblock%}
{% block main %}
    <br><br><br>
    <main class="main-content position-relative border-radius-lg d-flex justify-content-center align-items-center">
        <br><br><br><br><br>
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header pb-0 text-center"> {# Ajoutez la classe text-center #}
                    <h6 class="mb-2">Modifier Reclamation</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    {{ form_start(f) }}
                    <div class="mb-3">
                        {{ form_label(f.nom_client, 'Nom du Client', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(f.nom_client, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(f.email_client, 'Email du Client', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(f.email_client, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(f.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(f.description, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    {{ form_widget(f.id_reclamation) }} {# Hidden field for the ID #}
                    <div class="text-center"> {# Ajoutez la classe text-center #}
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </div>
                    {{ form_end(f) }}
                </div>
            </div>
        </div>
    </main>
{% endblock %}

