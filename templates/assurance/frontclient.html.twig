{% extends 'base.html.twig' %}

{% block title %}Assurance index{% endblock %}

{% block body %}
    <h1 class="text-center" style="color: white;">Assurance list</h1>

    <div class="container-fluid">
        <div class="row justify-content-center">
            {% for assurance in assurances %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">{{ assurance.nomdupack }}</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text"><strong>Promotion du pack:</strong> {{ assurance.promotiondupack }}</p>
                            <p class="card-text"><strong>Description:</strong> {{ assurance.description }}</p>
                            <p class="card-text"><strong>Type du pack:</strong> {{ assurance.typedupack }}</p>
                        </div>
                        <div class="card-footer">
                            <a href="{{ path('app_assurance_showfront', {'id': assurance.id}) }}" class="btn btn-primary">Show</a>
                            <a href="{{ path('app_assurancevehicule_newfront') }}" class="btn btn-primary">assurance vehicule</a>
                            <a href="{{ path('app_assurancevie_newfront') }}" class="btn btn-primary">assurance vie </a>

                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-md-12">
                    <div class="alert alert-info" role="alert">
                        No records found.
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="text-center">
    </div>
{% endblock %}
