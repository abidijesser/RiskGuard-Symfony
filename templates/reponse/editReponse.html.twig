{% extends 'base2.html.twig' %}
{% block title %}Modifier une réponse{% endblock %}
{% block asidee %}

    <aside class="sidenav bg-white navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-5 fixed-start ms-2 " id="sidenav-main">
        <div class="sidenav-header">
            <i class="fas fa-times p-3 cursor-pointer text-secondary opacity-5 position-absolute end-0 top-0 d-none d-xl-none" aria-hidden="true" id="iconSidenav"></i>
            <a class="navbar-brand m-0" href="{{ path('back') }}">
                <img src="{{ asset('assets/img/logo-ct-dark.png') }}" class="navbar-brand-img h-100 width=100 height=380" alt="main_logo">
                <span class="ms-1 font-weight-bold">RiskGuard</span>
            </a>
        </div>
        <hr class="horizontal dark mt-0">
        <div class="collapse navbar-collapse  w-auto " id="sidenav-collapse-main">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link " href="{{ path('back') }}">
                        <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="ni ni-tv-2 text-primary text-sm opacity-10"></i>
                        </div>
                        <span class="nav-link-text ms-1">Home</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="{{ path('display_reclamation') }}">
                        <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="ni ni-credit-card text-success text-sm opacity-10"></i>
                        </div>
                        <span class="nav-link-text ms-1">Reclamations</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active " href="{{ path('display_reponse') }}">
                        <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="ni ni-credit-card text-success text-sm opacity-10"></i>
                        </div>
                        <span class="nav-link-text ms-1">Reponses</span>
                    </a>
            </ul>
        </div>
    </aside>
{% endblock%}
{% block main %}
<br><br><br>
<main class="main-content position-relative border-radius-lg d-flex justify-content-center align-items-center">
    <div class="container-fluid py-4">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="text-center mb-4">Modifier une réponse</h1>
                {{ form_start(f) }}
                <div class="mb-3">
                    {{ form_row(f.reclamation, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="mb-3">
                    {{ form_label(f.date) }}
                    {{ form_widget(f.date, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(f.contenu) }}
                    {{ form_widget(f.contenu, {'attr': {'class': 'form-control'}}) }}
                </div>
                <button type="submit" class="btn btn-primary">Modifier</button>
                {{ form_end(f) }}
            </div>
        </div>
    </div>
</main>
{% endblock%}
